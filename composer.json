{
    "name": "cloudcatch/user-roles-table",
    "description": "A lightweight WordPress plugin that enhances WP_User_Query and get_users() performance by mirroring user roles into a custom database table, reducing overhead and improving scalability for large user bases.",
    "version": "0.0.0-development",
    "require": {
        "php": ">=8.0"
    },
    "license": "GPL-2.0-or-later",
    "require-dev": {
        "phpunit/phpunit": "^9",
        "yoast/phpunit-polyfills": "^2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "wp-coding-standards/wpcs": "^3.1",
        "automattic/vipwpcs": "^3.0",
        "php-stubs/woocommerce-stubs": "^9.4",
        "php-stubs/wp-cli-stubs": "^2.11",
        "php-stubs/wordpress-globals": "^0.2.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "test": "wp-env run tests-cli --env-cwd=wp-content/plugins/user-roles-table vendor/bin/phpunit"
    }
}